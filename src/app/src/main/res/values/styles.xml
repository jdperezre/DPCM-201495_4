<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Theme.Culturappstyle" parent="@style/Theme.AppCompat">
        <item name="actionBarItemBackground">@drawable/selectable_background_culturappstyle</item>
        <item name="popupMenuStyle">@style/PopupMenu.Culturappstyle</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Culturappstyle</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Culturappstyle</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Culturappstyle</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Culturappstyle</item>
        <item name="actionModeBackground">@drawable/cab_background_top_culturappstyle</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_culturappstyle</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Culturappstyle</item>


    </style>

    <style name="ActionBar.Solid.Culturappstyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_culturappstyle</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_culturappstyle</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_culturappstyle</item>
        <item name="progressBarStyle">@style/ProgressBar.Culturappstyle</item>
    </style>

    <style name="ActionBar.Transparent.Culturappstyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_culturappstyle</item>
        <item name="progressBarStyle">@style/ProgressBar.Culturappstyle</item>
    </style>

    <style name="PopupMenu.Culturappstyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_culturappstyle</item>
    </style>

    <style name="DropDownListView.Culturappstyle" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_culturappstyle</item>
    </style>

    <style name="ActionBarTabStyle.Culturappstyle" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_culturappstyle</item>
    </style>

    <style name="DropDownNav.Culturappstyle" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_culturappstyle</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_culturappstyle</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_culturappstyle</item>
    </style>

    <style name="ProgressBar.Culturappstyle" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_culturappstyle</item>
    </style>

    <style name="ActionButton.CloseMode.Culturappstyle" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_culturappstyle</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Culturappstyle.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Culturappstyle</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Culturappstyle</item>
    </style>

    <style name="ActionBottomBrackground">@colors/backgroundWindow</style>

    <style name="WindowBackground">
        <item name="background">@drawable/tab_indicator_ab_culturappstyle</item>
    </style>

    <!-- This style is for the splash screen -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
